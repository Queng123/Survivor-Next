extends ../layout

block content
  div(class="d-flex flex-row content justify-content-center mx-auto")
    form(class="card" method="post" action="/user/signin")
      div(class="card-header") Connexion
      div(class="card-body")
        div(class="form-group")
          label email
          Input(class="form-control" name="email" type="email")
        div(class="form-group")
          label password
          Input(class="form-control" name="password" type="password")
        if errors
          ul(class="my-2")
            each error in errors
              li(class="text-danger")= error
        div(class="w-100")
          input(type="submit" value="connexion" class="btn btn-primary ml-auto d-block")